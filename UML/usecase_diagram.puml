@startuml 유스케이스_다이어그램
!theme plain
skinparam defaultFontName "Malgun Gothic"
skinparam usecase {
    BackgroundColor LightBlue
    BorderColor DarkBlue
}

left to right direction

actor "일반 사용자" as User
actor "판매자" as Seller
actor "관리자" as Admin

rectangle "골드옥션 시스템" {

    package "회원 관리" {
        usecase "회원 가입" as UC1
        usecase "로그인/로그아웃" as UC2
        usecase "회원 정보 관리" as UC3
    }

    package "경매 시스템" {
        usecase "경매 상품 등록" as UC4
        usecase "경매 상품 조회" as UC5
        usecase "경매 상품 관리" as UC6
        usecase "입찰하기" as UC7
        usecase "입찰 내역 조회" as UC8
        usecase "즉시 구매" as UC9
    }

    package "게시판 시스템" {
        usecase "게시판 조회" as UC10
        usecase "게시글 작성/수정/삭제" as UC11
        usecase "댓글 작성/수정/삭제" as UC12
        usecase "알림 조회" as UC13
    }

    package "공구이벤트" {
        usecase "이벤트 상품 관리" as UC14
        usecase "이벤트 상품 주문" as UC15
        usecase "주문 내역 조회" as UC16
    }

    package "관리자 기능" {
        usecase "관리자 로그인" as UC17
        usecase "회원 관리" as UC18
        usecase "게시판 관리" as UC19
        usecase "경매 상품 관리" as UC20
        usecase "거래 통계 조회" as UC21
        usecase "시스템 설정 관리" as UC22
    }

    package "공통 기능" {
        usecase "메인페이지 조회" as UC23
        usecase "금 시세/뉴스 조회" as UC24
    }
}

' 일반 사용자 관계
User --> UC1
User --> UC2
User --> UC3
User --> UC5
User --> UC7
User --> UC8
User --> UC9
User --> UC10
User --> UC11
User --> UC12
User --> UC13
User --> UC15
User --> UC16
User --> UC23
User --> UC24

' 판매자 관계
Seller --> UC1
Seller --> UC2
Seller --> UC3
Seller --> UC4
Seller --> UC5
Seller --> UC6
Seller --> UC8
Seller --> UC10
Seller --> UC11
Seller --> UC12
Seller --> UC13
Seller --> UC14
Seller --> UC16
Seller --> UC23
Seller --> UC24

' 관리자 관계
Admin --> UC17
Admin --> UC18
Admin --> UC19
Admin --> UC20
Admin --> UC21
Admin --> UC22
Admin --> UC5
Admin --> UC10
Admin --> UC14
Admin --> UC23
Admin --> UC24

' 확장 관계
UC7 ..> UC8 : <<extend>>
UC9 ..> UC8 : <<extend>>
UC15 ..> UC16 : <<extend>>

' 포함 관계
UC4 ..> UC5 : <<include>>
UC6 ..> UC5 : <<include>>
UC11 ..> UC10 : <<include>>

@enduml
